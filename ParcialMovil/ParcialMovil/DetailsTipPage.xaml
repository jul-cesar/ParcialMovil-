<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ParcialMovil.DetailsTipPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Detalles del Tip">
    <ContentPage.Content>
        <FlexLayout
            AlignItems="Center"
            Direction="Column"
            JustifyContent="Center">

            <Label Text="Titulo:" />

            <Label
                Margin="10"
                FontSize="30"
                Text="{Binding Tips.Titulo}"
                TextColor="Black" />



            <Label Text="Fecha de creacion:" />

            <Label FontSize="30" Text="{Binding Tips.Date}" />

            <Label Text="Descripcion:" />

            <Label
                Margin="10"
                FontSize="16"
                HorizontalTextAlignment="Center"
                Text="{Binding Tips.Descripcion}" />

            <Label Text="Imagen:" />
            <Image
                HeightRequest="300"
                Source="{Binding Tips.Foto}"
                WidthRequest="300" />

            <Button Clicked="editarTipActual" Text="Editar este Tip" />
        </FlexLayout>

    </ContentPage.Content>
</ContentPage>