<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ParcialMovil.editTipPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Editar Tip">
    <ContentPage.Content>
        <StackLayout>
            <Image
                x:Name="imageCamara"
                HeightRequest="300"
                Source="{Binding Foto}" />

            <StackLayout>
                <Button Clicked="Button_Clicked_1" Text="Toma una foto" />
                <Button Clicked="Button_Clicked_2" Text="Elige una foto" />
            </StackLayout>

            <Entry x:Name="TitleEntry" Placeholder="Title" />

            <DatePicker x:Name="DatePicker" />

            <Editor
                x:Name="DescriptionEditor"
                HeightRequest="100"
                Placeholder="Description" />


            <Button Clicked="Button_Clicked" Text="Editar" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>