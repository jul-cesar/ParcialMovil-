<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ParcialMovil.AddItemPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Add a new Tip!">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="imageCamara" HeightRequest="300" />

            <StackLayout>
                <Button Clicked="tomarFoto" Text="Toma una foto" />


                <Button Clicked="elegirFoto" Text="Elige una foto" />
            </StackLayout>

            <Entry x:Name="TitleEntry" Placeholder="Title" />

            <DatePicker x:Name="DatePicker" />

            <Editor
                x:Name="DescriptionEditor"
                HeightRequest="100"
                Placeholder="Description" />


            <Button Clicked="agregar" Text="Agregar" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>